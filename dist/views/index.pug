doctype html
html 
  head
    title #{pageTitle}
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0")
    link(rel="stylesheet" href="/css/styles.css")
    
  body 
    
    .container 
      h1 Url Shortener 
  
      form(action="/shortUrl" method="POST" class="my-4 form-inline")
        label(for="fullUrl" class="sr-only") URL
        input(type="url" name="fullUrl" id="fullUrl" placeholder="URL ..." required class="form-control col-4 mr-2")
        label(for="description" class="sr-only") Description
        input(type="text" name="description" id="description" placeholder="Description ..." required class="form-control col-4 mr-2")
        
        button(type="submit" class="btn btn-success") Shorten
      .table-responsive
        table(class="table table-striped table-bordered table-hover")
          thead(class="table-primary")
            tr
              th Full Url
              th Short Url 
              th Description
              th Clicks
          tbody
            each url in shortUrls 
              tr 
                td 
                  a(href=url.full target="_blank") #{url.full} 
                td(class="short-url")
                  a(href=url.short target="_blank" class="copy-link-input") #{url.short}
                  button(type="button" class="copy-link-button")
                    <span class="material-symbols-outlined">content_copy</span>
                td 
                  p #{url.description}
                td(class="clicks") #{url.clicks}

    script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js") 
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js")
    script(src="/js/script.js")

  